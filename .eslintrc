{
    "env": {
        "browser": true,
        "mocha": true
    },
    "extends": ["eslint-config-airbnb"],
    "parser": "babel-eslint",
    "rules": {
        "indent": ["error", 4],
        "max-len": [1, 80, 2, {"ignoreComments": true}],
        "no-plusplus": "off",
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "react/jsx-uses-vars": 1
    }
}